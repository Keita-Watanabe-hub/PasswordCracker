<Window x:Class="PasswordCracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Cracker" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="0,0,10,0">
            <TextBox Name="PasswordTextBox" Width="200" Margin="10"/>
            <Button Name="EncryptButton" Content="Encrypt" Width="100" Margin="10" Click="EncryptButton_Click"/>
            <TextBlock Name="EncryptedPasswordTextBlock" Margin="10"/>
            <Button Name="SaveToFileButton" Content="Save to File" Width="150" Margin="10" Click="SaveToFileButton_Click"/>
            <TextBox Name="MaxThreadsTextBox" Width="200" Margin="10"/>
            <Button Name="StartBruteForceButton" Content="Start Brute Force" Width="150" Margin="10" Click="StartBruteForceButton_Click"/>
            <TextBlock Name="BruteForceResultTextBlock" Margin="10"/>
            <TextBlock Name="TimeElapsedTextBlock" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>